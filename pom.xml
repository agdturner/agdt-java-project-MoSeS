    <name>agdt-project-moses</name>
    <url>https://github.com/agdturner/agdt-project-moses</url>
    <description>A Java Library to works with GeoTools.</description>
    <scm>
        <url>git@github.com:agdturner/agdt-project-moses.git</url>
        <connection>scm:git:git@github.com:agdturner/agdt-project-moses.git</connection>
        <developerConnection>scm:git:git@github.com:agdturner/agdt-project-moses</developerConnection>
    </scm>
    <licenses>
        <license>
            <name>Apache License 2.0</name>
            <url>https://github.com/agdturner/agdt-project-moses/LICENSE.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <organization>
        <name>Centre for Computational Geography, University of Leeds</name>
        <url>http://www.ccg.leeds.ac.uk/</url>
    </organization>
    <developers>
